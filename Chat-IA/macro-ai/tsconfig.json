{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "target": "ES2020",
    "module": "ESNext",
    "strict": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "moduleResolution": "node",
    "skipLibCheck": true,
    "allowImportingTsExtensions": false,
    "noEmit": false
  },
  "include": [
    "src"
  ]
}