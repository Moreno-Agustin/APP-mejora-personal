{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "lib": [
            "DOM",
            "ES2020"
        ],
        "moduleResolution": "node",
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "removeComments": false
    },
    "include": [
        "habitos/src/**/*",
        "Medidor de macros/src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/node_modules"
    ]
}